<Page x:Class="SecureNet.Pages.Browser.BrowserHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SecureNet.Pages.Browser"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1050"
      ShowsNavigationUI="False"
      Title="BrowserHome">

    <Grid>


        <StackPanel>
            <Label Foreground="Red">to have 2 tabs maybe?</Label>
            <WrapPanel>
                <Button  Click="OnClick" Style="{DynamicResource backBtn}" 
                     CommandParameter="/Pages/Home.xaml">
                    <Button.Template>
                        <ControlTemplate>
                            <Image Source="/SecureNet;component/Media/PasswordManager/back.png" />
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Label Style="{DynamicResource backLbl}" >
                    BrpwserLogs Home
                </Label>
            </WrapPanel>
            <Separator Background="Gray"/>

            <TextBlock/>

            <WrapPanel>
                <Label>Enter URL to scan: </Label>
                <TextBox VerticalContentAlignment="Center" 
                         Padding="10" TextWrapping="Wrap" 
                         MaxWidth="500" MinWidth="200" 
                         AcceptsReturn="True" MinHeight="40"
                         Margin="0">random text</TextBox>
            </WrapPanel>

            <WrapPanel>
                <Label>Upload file: </Label>
                <Button Click="tempVT" Style="{DynamicResource selectBtn}">upload file</Button>
            </WrapPanel>

            <Button Click="VT" Style="{DynamicResource selectBtn}">CHECK YOUR FILE/URL</Button>
        </StackPanel>



