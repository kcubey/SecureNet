<Page x:Class="SecureNet.Pages.Manager.PassHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1050"
      ShowsNavigationUI="False"
      Title="PassHome">

    <Grid>
        <StackPanel>
            
            <!--Header-->
            <Label FontSize="20" Foreground="Orange"  FontWeight="Bold">
                Password Manager
            </Label>
            
            <!--Separator 1-->
            <Separator Background="Gray" />

            <!--Nav to Login Credentials-->
            <WrapPanel>
                <Button  Click="ButtonCreden_Click" Width="100" Height="100" HorizontalAlignment="Left" Margin="30,20,20,20">
                    <Button.Template>
                        <ControlTemplate>
                            <Image Source="/Media/PasswordManager/creden.png" />
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <StackPanel VerticalAlignment="Center">
                    <Label  Foreground="Beige" FontSize="25" Margin="30,0,0,0">Login Credentials</Label>
                    <Label  Foreground="Beige" FontSize="15" Margin="30,0,0,0">Store your login information for different websites. You can update, delete and view the information you stored.</Label>
                </StackPanel>
               
            </WrapPanel>

            <!--Separator 2-->
            <Separator Background="Gray" />

            <!--Nav to Password Generator-->
            <WrapPanel>
                <Button  Click="ButtonGen_Click" Width="100" Height="100" HorizontalAlignment="Left" Margin="30,20,20,20">
                    <Button.Template>
                        <ControlTemplate>
                            <Image Source="/Media/PasswordManager/gen.png"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <StackPanel VerticalAlignment="Center">
                    <Label  Foreground="Beige" FontSize="25" Margin="30,0,0,0">Password Generator</Label>
                    <Label  Foreground="Beige" FontSize="15" Margin="30,0,0,0">Customize and generate secure passwords for your accounts.</Label>
                </StackPanel>
            </WrapPanel>

            <!--Seperator 3-->
            <Separator Background="Gray" />

            <!--Nav to ActivityLog-->
            <WrapPanel>
                <Button  Click="ButtonAlog_Click" Width="100" Height="100" HorizontalAlignment="Left" Margin="30,20,20,20">
                    <Button.Template>
                        <ControlTemplate>
                            <Image Source="/Media/PasswordManager/alog.png"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <StackPanel VerticalAlignment="Center">
                    <Label  Foreground="Beige" FontSize="25" Margin="30,0,0,0">Activity Log</Label>
                    <Label  Foreground="Beige" FontSize="15" Margin="30,0,0,0">Track the actions performed on your account. If you see any suspicious activities, inform the support team.</Label>
                </StackPanel>
                
            </WrapPanel>

          


        </StackPanel>

    </Grid>
</Page>
